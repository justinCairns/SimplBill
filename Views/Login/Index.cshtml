@model SimplBill3.Models.Account
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Login";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/Content/login.css">
</head>
<body>
    <h1>Log In</h1>
    <div id="login-container">
        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
        {
            <table>
               
                <tr>
                    <td>
                        @Html.LabelFor(model => model.Email)
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Email)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>@Html.ValidationMessageFor(model => model.Email) </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.Password)
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Password)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>@Html.ValidationMessageFor(model => model.Password) </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <label>@Html.DisplayFor(model => model.LogInErrorMessage) </label>
                    </td>

                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" name="name" value="login">
                    </td>
                </tr>
            </table>
        }
        <p><small>Not a member? @Html.ActionLink("Create an account here.", "CreateAccount", "Login")</small></p>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
